# =========================
# PostgreSQL
# =========================
POSTGRES_DB=your_db_name
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432              # internal port for containers
POSTGRES_EXTERNAL_PORT=5433     # port exposed to host (optional)

# =========================
# Redis
# =========================
REDIS_HOST=redis
REDIS_PORT=6379                 # internal port
REDIS_EXTERNAL_PORT=6379        # port exposed to host (optional)
REDIS_URL=redis://redis:${REDIS_PORT}

# =========================
# RabbitMQ
# =========================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672                 # internal port for messaging
RABBITMQ_EXTERNAL_PORT=5673        # external host port
RABBITMQ_MANAGEMENT_PORT=15672     # management UI port
RABBITMQ_USER=your_rabbitmq_user
RABBITMQ_PASSWORD=your_rabbitmq_password

# =========================
# Django
# =========================
DJANGO_SECRET_KEY=your_secret_key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =========================
# Email
# =========================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=your_email@gmail.com

# =========================
